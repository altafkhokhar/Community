<body >
    <div >

        <!--start-->
        <div class="text-gray-500 bg-gray-900 body-font headerTool">
            <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                    <span class="ml-3 text-xl">COMMUNITY</span>
                </a>
                <nav class="md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-700 	flex flex-wrap items-center text-base justify-center">
                    <a class="mr-5 hover:text-white headerText" href="/displaylist">List</a>
                    <a class="mr-5 hover:text-white headerText" href="/AddList">Add</a>
                </nav>
                <!--<button class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0">
                Button
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </button>-->
            </div>
        </div>
        <!--end-->

        <div class="bs-example1 text-gray-500 bg-gray-900 body-font">
            <div class="container-table101">
                <div class="wrap-table101">

                    <table class="table table-striped table-dark">
                        <div class="divv" style="text-align: center;  background-color: burlywood; height: 50px;padding-top: 10px;">
                            <h3>Persons List</h3>
                        </div>



                        <thead class="thead-dark " style="text-align: center;">
                            <tr>

                                <th>Register No</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Father Name</th>
                                <th>Qualification</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;">
                            {{#each displayperson}}
                            <tr>

                                <td>{{registerNo}}</td>
                                <td>{{firstName}}</td>
                                <td>{{lastName}}</td>
                                <td>{{fatherName}}</td>
                                <td>{{qualification}}</td>
                                <td>{{phoneNumber}}</td>

                                <td>{{email}}</td>
                                <td>

                                    <a href="/updateperson/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                </td>
                                <td>

                                    <a><i class="fa fa-trash" data-toggle="modal" data-target="#exampleModal" aria-hidden="true"></i></a>
                                </td>

                            </tr>


                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure ?
                                        </div>
                                        <div class="modal-footer">
                                            <a href="/deleteperson/{{_id}}"><button type="button" class="btn btn-secondary">Delete</button></a>
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {{/each}}
                            <tr>
                                <td colspan="9" style="background-color:burlywood;">
                                </td>

                            </tr>
                        </tbody>
                    </table>





                </div>

</body>

</html>